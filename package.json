{
  "name": "stock-keeper",
  "version": "1.0.0",
  "scripts": {
    "start": "nodemon app.ts --exec babel-node",
    "compile": "tsc --noEmit",
    "test": "./node_modules/.bin/jest --watchAll",
    "test-ci": "./node_modules/.bin/jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/*.test.(ts|tsx)"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "graphql-yoga": "^1.14.10",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5"
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
